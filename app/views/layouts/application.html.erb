<!DOCTYPE html>
<html>
  <head>
    <title>HackerNewsClone</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'global/header' %>

    <% if flash[:notice].present? || notice.present? %>
      <p class="notice"><%= flash[:notice] || notice %></p>
    <% end %>

    <% if flash[:error].present? || alert.present? %>
      <p class="alert"><%= flash[:error] || alert %></p>
    <% end %>

    <%= yield %>
  </body>
</html>
