<h1>New Post</h1>

<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
    <p>Fix the fields below, please.</p>
    <ul>
      <% @post.errors.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :link %>
    <%= f.text_field :link %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <%= f.submit %>
<% end %>
